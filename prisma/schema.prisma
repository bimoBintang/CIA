generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User roles enum
enum Role {
  ADMIN // Full access - manage all
  SENIOR_AGENT // Can manage operations, intel, messages
  AGENT // Can view and submit intel, messages
  VIEWER // Read-only access
}

model User {
  id               String          @id @default(cuid())
  email            String          @unique
  password         String
  name             String
  role             Role            @default(AGENT)
  agentId          String?         @unique
  agent            Agent?          @relation(fields: [agentId], references: [id])
  sessionToken     String?         @unique // Current active session token
  sessionCreatedAt DateTime? // When the current session was created
  sessionDevice    String? // Device info for the active session
  otpCode          String? // OTP code for email verification
  otpExpiry        DateTime? // OTP expiration time
  otpAttempts      Int             @default(0) // Failed OTP attempts
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  loginActivities  LoginActivity[]
}

model Agent {
  id        String   @id @default(cuid())
  codename  String   @unique
  email     String   @unique
  faculty   String
  level     String   @default("Junior")
  status    String   @default("offline")
  missions  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user             User?
  sentMessages     Message[]        @relation("SentMessages")
  receivedMessages Message[]        @relation("ReceivedMessages")
  intelReports     Intel[]
  channelMembers   ChannelMember[]
  channelMessages  ChannelMessage[]
}

model Operation {
  id        String   @id @default(cuid())
  name      String
  status    String   @default("planning")
  progress  Int      @default(0)
  deadline  DateTime
  teamSize  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Intel {
  id          String   @id @default(cuid())
  title       String
  content     String?
  priority    String   @default("low")
  attachments String[] // file URLs
  sourceId    String
  source      Agent    @relation(fields: [sourceId], references: [id])
  createdAt   DateTime @default(now())
}

model Message {
  id          String   @id @default(cuid())
  content     String
  read        Boolean  @default(false)
  attachments String[] // file URLs
  fromId      String
  toId        String
  fromAgent   Agent    @relation("SentMessages", fields: [fromId], references: [id])
  toAgent     Agent    @relation("ReceivedMessages", fields: [toId], references: [id])
  createdAt   DateTime @default(now())
}

model Application {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  faculty   String
  reason    String
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model VisitorLog {
  id        String   @id @default(cuid())
  ip        String
  userAgent String
  device    String // mobile, tablet, desktop
  browser   String // Chrome, Firefox, Safari, etc.
  os        String // Windows, macOS, iOS, Android, etc.
  country   String?
  city      String?
  page      String // visited page path
  referer   String?
  userId    String? // if logged in
  createdAt DateTime @default(now())

  @@index([ip])
  @@index([createdAt])
}

model BannedIP {
  id        String    @id @default(cuid())
  ip        String    @unique
  reason    String
  bannedBy  String // admin user id
  expiresAt DateTime? // null = permanent ban
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([ip])
  @@index([expiresAt])
}

model LoginActivity {
  id        String   @id @default(cuid())
  userId    String? // null if login failed
  email     String // attempted email
  ip        String
  userAgent String
  device    String // mobile, tablet, desktop
  browser   String
  os        String
  status    String // success, failed, blocked
  reason    String? // failure reason
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([ip])
  @@index([createdAt])
  @@index([status])
}

// ============ Channels & Group Messages ============

model Channel {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   @default("group") // group, broadcast, announcement
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members  ChannelMember[]
  messages ChannelMessage[]

  @@index([type])
}

model ChannelMember {
  id        String   @id @default(cuid())
  channelId String
  agentId   String
  role      String   @default("member") // admin, member
  joinedAt  DateTime @default(now())

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  agent   Agent   @relation(fields: [agentId], references: [id])

  @@unique([channelId, agentId])
  @@index([channelId])
  @@index([agentId])
}

model ChannelMessage {
  id          String   @id @default(cuid())
  channelId   String
  senderId    String
  content     String
  attachments String[] // array of file URLs
  createdAt   DateTime @default(now())

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  sender  Agent   @relation(fields: [senderId], references: [id])

  @@index([channelId])
  @@index([senderId])
  @@index([createdAt])
}

// ============ Albums & Photos ============

model Album {
  id          String   @id @default(cuid())
  title       String
  description String?
  coverUrl    String? // Cover image URL
  isPublic    Boolean  @default(false)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  photos Photo[]

  @@index([createdBy])
  @@index([isPublic])
}

model Photo {
  id        String   @id @default(cuid())
  albumId   String
  url       String
  filename  String
  caption   String?
  size      Int // File size in bytes
  width     Int?
  height    Int?
  createdAt DateTime @default(now())

  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@index([albumId])
  @@index([createdAt])
}
